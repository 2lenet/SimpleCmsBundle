<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content=" minimum-scale=1.0, maximum-scale=1.0, width=device-width; user-scalable=no">
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block title %}{{ title|default('Simple CMS')|striptags }}{% endblock %}</title>

        {% block includes %}
            <link href="{{ asset('/bundles/acmemain/bootstrap/css/bootstrap.min.css') }}" type="text/css" rel="stylesheet"/>
            <link href="{{ asset('/bundles/acmemain/bootstrap/css/bootstrap-responsive.min.css') }}" type="text/css" rel="stylesheet"/>
            <link href="{{ asset('/bundles/acmemain/css/style.css') }}" type="text/css" rel="stylesheet"/>

            <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
            <!--[if lt IE 9]>
            <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
            <![endif]-->

            <link href="{{ asset('/bundles/liipvie/vendor/hallo/examples/Aristo/jquery-ui-1.8.7.custom.css') }}" type="text/css" rel="stylesheet"/>
            <link href="{{ asset('/bundles/liipvie/css/halloLiipStyle.css') }}" type="text/css" rel="stylesheet"/>
            <link href="{{ asset('/bundles/liipvie/vendor/hallo/examples/overlay.css') }}" type="text/css" rel="stylesheet"/>
            <link href="{{ asset('/bundles/liipvie/vendor/examples/image.css') }}" type="text/css" rel="stylesheet"/>
            <link href="{{ asset('/bundles/liipvie/vendor/examples/link.css') }}" type="text/css" rel="stylesheet"/>
            <link rel="stylesheet" href="/bundles/liipvie/vendor/create/themes/midgard-tags/tags.css" media="screen" type="text/css"/>
        {% endblock %}

        {% block top_scripts %}
        {% endblock %}
    </head>
    <body>
        <div class="container">

            <div id="top" class="row">
                <div id="banner" class="span12">
                    <ul id="skiplinks" class="pull-left hidden-desktop">
                        <li><a href="#content" title="Go to main content">content</a></li>
                        <li><a href="#navigation" title="go to navigation">navigation</a></li>
                    </ul>
                    <div id="language_selector" class="pull-right">
                        {% block language_selector %}
                            {% if page is defined %}
                                {% render "symfony_cmf_multilang_content.languageSelectorController:languagesAction" with {"id" : page.path, "languageUrls": languageUrls|default(false) } %}
                            {% endif %}
                        {% endblock %}
                    </div>
                </div>
            </div>

            <div class="row">
                <div id="banner" class="span12">
                    <a href="https://github.com/symfony-cmf/cmf-acme"><img style="position: absolute; top: 0; right: 0; border: 0;" src="http://s3.amazonaws.com/github/ribbons/forkme_right_darkblue_121621.png" alt="Fork me on GitHub"/></a>
                    <div class="hero-unit">
                        <h1 id="logo-text"><a href="{{ asset('') }}">CMF Acme</a></h1>
                        <p id="slogan">Symfony2 Content Management Framework</p>
                    </div>
                </div>
            </div>

            <div  class="row">
                <div id="content-container" class="span12 boxed">
                    <div class="row">
                        <div id="navigation" class="span3">
                            <div class="well">
                                {% block navigation %}
                                    <h2>Navigation</h2>
                                    {# knp_menu_render('min') #}
                                {% endblock %}
                            </div>
                        </div>
                        <div class="span9">
                            <div id="content">
                                <div class="inner">
                                    {% block content %}
                                    {% endblock %}
                                </div>
                            </div>

                            <div id="content_extra">
                                <div class="inner">
                                    {% block content_extra %}
                                    {% endblock %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <hr/>

            <div id="footer" class="row">
                <div id="menu-service">
                    {{ knp_menu_render('service') }}
                </div>
                <div class="span12">
                {% block footer %}
                    <p>Powered by <a href="http://cmf.symfony.com/">Symfony CMF</a> | Frontend editing founded in part by <a href="http://www.iks-project.eu/">IKS</a></p>
                    {% endblock %}
                </div>
            </div>
        </div>

        {% block bottom_scripts %}
            {#% render "liip_vie.controller.vie:includeJSFilesAction" %#}

            <script src="{{ asset('bundles/acmemain/js/savebutton.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/acmemain/js/userbar.js') }}" type="text/javascript"></script>
        {% endblock %}
    </body>
</html>

